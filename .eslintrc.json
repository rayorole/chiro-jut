{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "import"],
  "rules": {
    "import/no-restricted-paths": [
      "error",
      {
        "zones": [
          {
            "target": "./src/app/layout.tsx",
            "from": "./src/studio"
          }
        ]
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": true,
      "node": true
    }
  },
  "overrides": [
    {
      "files": ["src/studio/**/*.*", "sanity.config.ts"],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "name": "next-sanity",
            "message": "\n ðŸ”¥ Importing the next-sanity package into the Sanity studio is not allowed. Read more about this in the sanity-ignite Readme.md"
          }
        ]
      }
    },
    {
      "files": ["src/**/*.*"],
      "excludedFiles": ["sanity.config.ts", "src/studio/**/*.*"],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "patterns": [
              {
                "group": ["@/studio/*", "@sanity/assist", "@sanity/icons", "@sanity/vision"],
                "message": "\n ðŸ”¥ Importing files from sanity studio into the Next.js app is not allowed. Read more about this in the sanity-ignite Readme.md"
              }
            ]
          }
        ]
      }
    }
  ]
}
