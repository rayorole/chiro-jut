{
  "name": "chiro-jut",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "next:dev": "next dev --turbopack",
    "next:build": "npm run sanity:typegen && next build",
    "next:start": "next start",
    "next:debug": "NEXT_PRIVATE_DEBUG_CACHE=1 next:build && next:start",
    "lint": "next lint",
    "dev": "npm-run-all --parallel --race next:dev watch-typegen",
    "built": "npm run next:build",
    "start": "npm run next:start",
    "sanity:typegen": "mkdir -p ./.sanity && sanity schema extract --path=.sanity/schema.json && sanity typegen generate",
    "typecheck": "tsc --noEmit",
    "watch-typegen": "tsx watch-typegen.ts",
    "test": "vitest",
    "prepare": "husky install"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-navigation-menu": "^1.2.5",
    "@radix-ui/react-slot": "^1.1.2",
    "@sanity/assist": "^3.0.8",
    "@sanity/icons": "^3.4.0",
    "@sanity/image-url": "^1.1.0",
    "@sanity/react-loader": "^1.10.28",
    "@sanity/vision": "^3.81.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.476.0",
    "next": "^15.2.4",
    "next-sanity": "^9.9.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sanity": "^3.81.0",
    "server-only": "^0.0.1",
    "sonner": "^1.7.1",
    "styled-components": "^6.1.13",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "valibot": "^1.0.0-beta.14"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/chokidar": "^2.1.7",
    "@types/node": "^20",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vitejs/plugin-react": "^4.3.4",
    "chokidar": "^4.0.3",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.0.1",
    "eslint-plugin-import": "^2.31.0",
    "jsdom": "^26.0.0",
    "groq": "^3.79.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "tailwindcss": "^4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.8"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --cache --fix",
    "*.{ts,tsx,js,css,md}": "prettier --write"
  }
}
